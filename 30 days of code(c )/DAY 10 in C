// Day 10

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int a,b;

    printf("BASE 10 TO BASE 2 CONVERTER\n\n");
    printf("Enter the base 10 number you want to convert:");
    scanf("%d", &a);

    while(a!=0)
    {
        b=a%2;
        a=a/2;
        printf("%d", b);
    }
    return 0;
}
